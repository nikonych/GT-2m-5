<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/polygon_2__1_"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/bi3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxWidth="400dp"
        android:maxHeight="300dp"
        android:src="@drawable/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bi"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="135dp"

        android:src="@drawable/sova"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:fontFamily="@font/capriola"
        app:layout_constraintTop_toBottomOf="@+id/bi"
        app:layout_constraintStart_toStartOf="@+id/bi"
        app:layout_constraintEnd_toEndOf="@+id/bi"
        />


    <ImageButton
        android:layout_marginTop="60dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        android:background="@drawable/ic_arrow"
        android:backgroundTintMode="screen"

        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/facebook"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="30dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:text="Log in with Facebook"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/icons8_facebook"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <View
        android:id="@+id/hr"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toStartOf="@id/or"
        app:layout_constraintTop_toTopOf="@id/or"
        app:layout_constraintBottom_toBottomOf="@id/or"/>

    <View
        android:id="@+id/hr2"
        android:layout_marginStart="20dp"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/or"
        app:layout_constraintStart_toEndOf="@+id/or"
        app:layout_constraintTop_toTopOf="@+id/or" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:text="OR"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/email_btn"
        app:layout_constraintEnd_toEndOf="@id/facebook"
        app:layout_constraintStart_toStartOf="@id/facebook"
        app:layout_constraintTop_toBottomOf="@id/facebook" />


    <Button
        android:id="@+id/email_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/or"
        app:layout_constraintStart_toStartOf="@id/or"
        app:layout_constraintEnd_toEndOf="@id/or"
        android:background="@color/none"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:fontFamily="@font/capriola"
        app:layout_constraintBottom_toTopOf="@id/game"
        android:textColor="@color/black"
        android:text="Up with Email"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/blue"
        android:text="Game Now"
        android:textSize="20sp"
        android:fontFamily="@font/capriola"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_btn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="LOG IN"
        android:fontFamily="@font/capriola"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>